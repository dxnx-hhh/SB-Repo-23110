{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#articleList}}  <!-- articleList 사용할 범위를 지정한다. 변수가 데이터 묶음일 경우, 그 안의 코드를 반속실행. 마치 for문처럼!-->
    <tr>
        <th scope="row">{{id}}</th>
        <td colspan="2"><a href="/articles/{{id}}">{{title}}</a></td>
        <td>{{content}}</td>
    </tr>
    {{/articleList}}
    </tbody>
</table>

<a href="/articles/new">New Article</a>

{{>layouts/footer}}